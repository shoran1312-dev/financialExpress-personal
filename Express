<body>
  <!-- Login -->
  <div id="loginOverlay">
    <div id="loginBox">
      <h2>Enter Password</h2>
      <input type="password" id="passwordInput" placeholder="Password">
      <button onclick="checkPassword()">Enter</button>
      <p id="error" style="color:red; display:none;">Wrong password</p>
    </div>
  </div>

  <header>
    <button onclick="openFile()">Add File</button>
    <button onclick="toggleSidebar()">Open Previous Files</button>
  </header>

  <div id="sidebar">
    <h3>Previous Files</h3>
    <div id="filesList">Nothing is there</div>
  </div>

  <div id="main" style="display:none;">
    <h2>Expense Tracker</h2>
    <button onclick="openPopup()">Add Expense</button>
    <table>
      <thead>
        <tr>
          <th>Item</th>
          <th>Price</th>
          <th>Date & Time</th>
        </tr>
      </thead>
      <tbody id="expenseTable">
      </tbody>
    </table>
  </div>

  <!-- Popup -->
  <div id="popup">
    <div id="popupContent">
      <h3>Add Expense</h3>
      <input type="text" id="itemName" placeholder="Item name">
      <input type="number" id="itemPrice" placeholder="Price">
      <button onclick="addExpense()">Enter</button>
    </div>
  </div>

  <script>
    const PASSWORD = "1234"; // you can change this
    let expenses = JSON.parse(localStorage.getItem("expenses") || "[]");

    function checkPassword() {
      const input = document.getElementById("passwordInput").value;
      if(input === PASSWORD) {
        document.getElementById("loginOverlay").style.display = "none";
        document.getElementById("main").style.display = "block";
        renderTable();
        renderFiles();
      } else {
        document.getElementById("error").style.display = "block";
      }
    }

    function toggleSidebar() {
      document.getElementById("sidebar").classList.toggle("active");
    }

    function openFile() {
      document.getElementById("main").scrollIntoView({behavior:"smooth"});
    }

    function openPopup() {
      document.getElementById("popup").style.display = "flex";
    }

    function addExpense() {
      const name = document.getElementById("itemName").value;
      const price = document.getElementById("itemPrice").value;
      if(!name || !price) return;
      const now = new Date();
      const entry = {
        name,
        price,
        date: now.toLocaleString()
      };
      expenses.push(entry);
      localStorage.setItem("expenses", JSON.stringify(expenses));
      document.getElementById("popup").style.display = "none";
      document.getElementById("itemName").value = "";
      document.getElementById("itemPrice").value = "";
      renderTable();
      renderFiles();
    }

    function renderTable() {
      const table = document.getElementById("expenseTable");
      table.innerHTML = "";
      expenses.forEach(e => {
        table.innerHTML += `<tr><td>${e.name}</td><td>${e.price}</td><td>${e.date}</td></tr>`;
      });
    }

    function renderFiles() {
      const filesList = document.getElementById("filesList");
      if(expenses.length === 0) {
        filesList.innerHTML = "Nothing is there";
      } else {
        filesList.innerHTML = "";
        filesList.innerHTML = `<p>File 1 (stored)</p>`;
      }
    }
  </script>
</body>
